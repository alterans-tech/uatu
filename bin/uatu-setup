#!/bin/bash
# uatu-setup - One-time user-level MCP installation
# Run once on any machine where you'll use Uatu - The Watcher
#
# This script installs MCP servers at the USER level so they're available
# across all projects. Project-specific servers go in .mcp.json via uatu-install.

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

echo ""
echo -e "${CYAN}    ██╗   ██╗ █████╗ ████████╗██╗   ██╗${NC}"
echo -e "${CYAN}    ██║   ██║██╔══██╗╚══██╔══╝██║   ██║${NC}"
echo -e "${CYAN}    ██║   ██║███████║   ██║   ██║   ██║${NC}"
echo -e "${CYAN}    ██║   ██║██╔══██║   ██║   ██║   ██║${NC}"
echo -e "${CYAN}    ╚██████╔╝██║  ██║   ██║   ╚██████╔╝${NC}"
echo -e "${CYAN}     ╚═════╝ ╚═╝  ╚═╝   ╚═╝    ╚═════╝ ${NC}"
echo ""
echo "═══════════════════════════════════════════════════════════════"
echo "  Uatu - The Watcher | User-Level MCP Installation"
echo "═══════════════════════════════════════════════════════════════"
echo ""

# Check prerequisites
echo -e "${BLUE}Checking prerequisites...${NC}"
echo ""

if ! command -v claude &> /dev/null; then
    echo -e "${RED}Error: 'claude' CLI not found.${NC}"
    echo "   Install Claude Code first:"
    echo "   npm install -g @anthropic-ai/claude-code"
    exit 1
fi
echo -e "${GREEN}Claude CLI found${NC}"

if ! command -v node &> /dev/null; then
    echo -e "${RED}Error: Node.js not found.${NC}"
    echo "   Install Node.js 18+ from https://nodejs.org"
    exit 1
fi

NODE_VERSION=$(node -v | cut -d'v' -f2 | cut -d'.' -f1)
if [ "$NODE_VERSION" -lt 18 ]; then
    echo -e "${YELLOW}Warning: Node.js version $NODE_VERSION detected. Recommended: 18+${NC}"
else
    echo -e "${GREEN}Node.js $(node -v) found${NC}"
fi

if ! command -v npx &> /dev/null; then
    echo -e "${RED}Error: npx not found.${NC}"
    exit 1
fi
echo -e "${GREEN}npx found${NC}"

echo ""
echo "═══════════════════════════════════════════════════════════════"
echo "  Installing User-Level MCP Servers"
echo "═══════════════════════════════════════════════════════════════"
echo ""

# Function to install MCP with error handling
install_mcp() {
    local name=$1
    local description=$2
    shift 2
    local cmd="$@"

    echo -e "${BLUE}Installing ${name}...${NC}"
    echo "   ${description}"

    # Capture stderr for better error reporting
    local error_output
    if error_output=$(claude mcp add "$name" -s user -- $cmd 2>&1); then
        echo -e "${GREEN}   ${name} installed successfully${NC}"
        return 0
    else
        # Check if already exists
        if claude mcp list 2>/dev/null | grep -q "$name"; then
            echo -e "${YELLOW}   ${name} already installed (skipping)${NC}"
            return 0
        else
            echo -e "${RED}   Failed to install ${name}${NC}"
            echo -e "${RED}   Error: ${error_output}${NC}"
            echo -e "${YELLOW}   You may need to install dependencies or check your network connection${NC}"
            return 1
        fi
    fi
    echo ""
}

# Install Sequential Thinking - Required for task analysis
install_mcp "sequential-thinking" \
    "Task analysis and structured reasoning" \
    npx -y @modelcontextprotocol/server-sequential-thinking

# Install Claude Flow - SQUAD swarms + HIVE sessions
install_mcp "claude-flow" \
    "SQUAD swarms + HIVE hive-mind sessions" \
    npx claude-flow@alpha mcp start

# Install Ruv Swarm - BRAIN (DAA, neural, no timeout)
install_mcp "ruv-swarm" \
    "BRAIN package - DAA agents, neural networks, no timeout" \
    npx ruv-swarm mcp start

# Install Browser MCP - Web automation
install_mcp "browsermcp" \
    "Web browser automation and testing" \
    npx -y @browsermcp/mcp

# Install Context7 - Documentation lookup
install_mcp "context7" \
    "Up-to-date documentation lookup for any library" \
    npx @upstash/context7-mcp

echo "═══════════════════════════════════════════════════════════════"
echo -e "  ${GREEN}Setup Complete!${NC}"
echo "═══════════════════════════════════════════════════════════════"
echo ""
echo "Installed User-Level MCPs:"
echo "  sequential-thinking  - Task analysis (SOLO/all packages)"
echo "  claude-flow          - SQUAD swarms + HIVE hive-mind"
echo "  ruv-swarm            - BRAIN (DAA, neural, no timeout)"
echo "  browsermcp           - Web automation"
echo "  context7             - Documentation lookup"
echo ""

# Verify installation
echo -e "${BLUE}Verifying MCP installation...${NC}"
REQUIRED_MCPS=("sequential-thinking" "claude-flow" "ruv-swarm")
VERIFICATION_FAILED=false

for mcp in "${REQUIRED_MCPS[@]}"; do
    if claude mcp list 2>/dev/null | grep -q "$mcp"; then
        echo -e "  ${GREEN}$mcp verified${NC}"
    else
        echo -e "  ${RED}$mcp NOT FOUND${NC}"
        VERIFICATION_FAILED=true
    fi
done

if [[ "$VERIFICATION_FAILED" == true ]]; then
    echo ""
    echo -e "${RED}Warning: Some required MCPs failed to install properly${NC}"
    echo "   Try running this script again or install manually with:"
    echo "   claude mcp add <name> -s user -- <command>"
    echo ""
else
    echo -e "${GREEN}All required MCPs verified successfully${NC}"
fi
echo ""
echo -e "${BLUE}Full MCP list:${NC} claude mcp list"
echo ""
echo "═══════════════════════════════════════════════════════════════"
echo "  Next Steps"
echo "═══════════════════════════════════════════════════════════════"
echo ""
echo "1. Navigate to your project directory:"
echo "   cd /path/to/your-monorepo"
echo ""
echo "2. Run the project installer:"
echo "   uatu-install"
echo ""
echo "3. Edit your tokens:"
echo "   Edit .env with your GH_TOKEN"
echo ""
echo "4. Start Claude Code:"
echo "   claude"
echo ""
